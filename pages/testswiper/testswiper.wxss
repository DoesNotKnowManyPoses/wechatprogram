swiper{
  position:relative;  /*why set it to fixed or absolute, the pulldown does not show.*/
  left:0;
  top:0;
  width:100%;
}

.textdecoration{
  display:inline-block;
  position:absolute;  
  top:-20rpx;       /*why minue value shows the information */
  left:120rpx;
  height:100rpx;   
  width:80%;
}
.upperText{
  left:0rpx;
  position: absolute;
  height:90rpx;
  width:600rpx;
  overflow: hidden;
  text-overflow:ellipsis;
}

.value{
  position: absolute;
  right:0rpx;
  top:40rpx;
  height:100%;
  font-size: 30rpx;
  width:100rpx;
  text-align: right;
  color:#e64340;
}
.imageStyle{
  position:relative;
  top:0rpx;
  left:0rpx;
  width:80rpx;
  height:90rpx;
}
.backgroundImage{
  position:absolute;
  width:100%;
  height:100%;
}
.backgroundColor{
  position:absolute;
  width:100%;
  height:100%;
  /*background-color: rgb(120,24,28); */
  background-color:rgb(240,240,240);
}
.newJob{
  width:100%;
  height:100rpx;
  background-color: white;
  padding:20rpx 20rpx;
}
.swappage{    /* why the bottom and the height will affect the show of not of scroll bar   fixed solved this issue.*/ 
  position:fixed;
  border-top:1px solid grey;
  z-index: 6;
  width:100%;
  height:120rpx;
  background-color:white;
  margin:0;
  padding:0;
  font-weight: bold;
  opacity: 1;
  bottom:-2rpx;
}
.swapbutton{
  width:33%;
  height:100%;
  display:inline-block;
  text-align: center;
  font-size:25rpx;
  margin:0;
}

.middleButton{
  height:40rpx;
  width:100%;
  text-align: center;
  overflow:auto;
  margin:0;
  font-family: 'icomoon';
}


.swapicon{
  height:70rpx;
  width:100%;
  font-family: 'icomoon';
  font-size:42rpx;
  line-height: 70rpx;
}
.swapicon.one::after{
  content:"\e920";
}
.swapicon.two::after{
  content:"\e9a3";
}
.swapicon.three::after{
  content:"\e914";
}
view{
    position: relative;
    box-sizing: border-box;
}

.item-box{
    position:relative;
    width: 100%;
    margin: 0 auto;
    height: 100%;
    overflow: auto;
}

.items{
    width: 100%;
    opacity: 1;
}


.item{
    position: relative;
    border: 1rpx solid #ddd;
    margin-top:-1rpx;   /*remove the overlap of border*/
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
}
.item:first-child{
  margin-top:0;   /*get the border of the first item.*/
}


.inner{

    position: absolute;

    top:0;

}

.inner.txt{

    background-color: #fff;

    width: 100%;

    z-index: 5;

    padding:0
10rpx;

    transition: left 0.2s ease-in-out;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;

}

.inner.del{
    background-color: #e64340;
    width: 180rpx;
    text-align: center;
    z-index: 4;
    right: 0;
    color: #fff

}
.inner.done{
  background-color:green;
  width:180rpx;
  text-align: center;
  z-index:4;
  left:0;
  color:#fff;
}

.item-icon{

    width: 64rpx;

    vertical-align: middle;

    margin-right: 16rpx

}


/*modal copied from website */
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 20%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  width:100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
  overflow: auto;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: content-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
